pipeline {
    agent any
    

    stages {
        stage('Build') {
            steps {
                echo "Building using maven"
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo "Testing using JUnit"
            }
            post {
                always {
                    // Email notification configuration
                    emailext (
                        to: 's222283975@deakin.edu.au',
                        subject: "Build Notification - ${currentBuild.result}",
                        body: """
                        Build ${currentBuild.fullDisplayName} has finished.\n
                        Result: ${currentBuild.result}\n
                        Build URL: ${env.BUILD_URL}
                        """,
                        mimeType: 'text/plain',
                        attachLog: true,
                        attachmentsPattern: '**/*.log'
                    )
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo "using SonarQube tool to analyse the code."
            }
        }
        
        stage('Security Scan') {
            steps {
                echo "OWASP Dependency-Check Plugin"
            }

            post {
                always {
                    // Email notification configuration
                    emailext (
                        to: 's222283975@deakin.edu.au',
                        subject: "Build Notification - ${currentBuild.result}",
                        body: """
                        Build ${currentBuild.fullDisplayName} has finished.\n
                        Result: ${currentBuild.result}\n
                        Build URL: ${env.BUILD_URL}
                        """,
                        mimeType: 'text/plain',
                        attachLog: true,
                        attachmentsPattern: '**/*.log'
                    )
                }
            }
        }

        
        stage('Deploy to Staging') {
            steps {
                echo "Deploying to staging in AWS EC2 server"
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo "using JUnit for Integration testing"
            }
        }
        
        stage('Deploy to Production') {
            steps {
               echo "Deploying to production in AWS EC2 server"
            }
        }
    }
}
