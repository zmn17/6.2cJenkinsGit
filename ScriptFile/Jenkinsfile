pipeline {
    agent any
    
    tools{
        maven "Maven3"
    }

    stages {
        stage('Build') {
            steps {
                dir("my-maven-app"){
                    sh "mvn clean package"
                }
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                dir("my-maven-app"){
                    sh "mvn test"
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                dir("my-maven-app"){
                    withSonarQubeEnv('SonarQubeScanner') {
                        sh 'mvn sonar:sonar'
                    }  
                }
            }
        }
        
        stage('Security Scan') {
            steps {
                dir("my-maven-app"){
                    sh "dependency-check --project mavenProject --scan . --format HTML"
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'heelo'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'heelo'
            }
        }
        
        stage('Deploy to Production') {
            steps {
               echo 'heelo'
            }
        }
    }
}
